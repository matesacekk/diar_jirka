<Window x:Class="WpfApp1.AddEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Record" Height="200" Width="539">
    <Grid Margin="0,0,0,-16">
        <Label Content="Datum:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="70,10,0,0"/>
        <Label Content="Událost:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox x:Name="eventTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="100" Margin="70,40,0,0" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button Content="Přidat" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,150,0,0" Click="Add_Click"/>
        <Button Content="Zrušit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="95,150,0,0" Click="Cancel_Click"/>
        <Image Margin="316,10,33,28" Source="/holy.jpg" Stretch="Fill"/>
    </Grid>
</Window>